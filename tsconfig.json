{
  "compilerOptions": {
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    },
    "target": "es2016",
    "lib": ["ES6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
